<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/medal_item_background"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"/>

    <com.davidpapazian.yokaiwatchmedals.views.AutoFitTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="@color/medal_name_background"
        android:layout_below="@+id/image"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/top_details"
        android:background="@color/medal_item_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/name">
        <com.davidpapazian.yokaiwatchmedals.views.AutoFitTextView
            android:id="@+id/serie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
        <com.davidpapazian.yokaiwatchmedals.views.AutoFitTextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"/>
        <com.davidpapazian.yokaiwatchmedals.views.AutoFitTextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/collection_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.davidpapazian.yokaiwatchmedals.views.AutoFitTextView
            android:id="@+id/total_number"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/favourite"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
</RelativeLayout>